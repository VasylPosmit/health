extends default.jade
block input
  h2 {{layout.data.name}} information

  md-input-container.md-block(flex, flex-gt-sm='45')
    label Name
    input(ng-model='layout.user.name', ng-model-options="{ updateOn: 'blur' }")

  md-input-container.md-block(flex, flex-gt-sm='45')
    label Go to sleep at
    input(kil-time, type= "time", ng-model='layout.user.sleep.start', aria-label= 'go to bed time')
  md-input-container.md-block(flex, flex-gt-sm='45')
    label Wake up at
    input(kil-time, type= "time", ng-model='layout.user.sleep.end', aria-label= 'wake up time')
  p(ng-bind= 'layout.user.sleep.start')
  p(ng-bind= 'layout.user.sleep.end')
  md-input-container.md-block()
    label Wake up habit
    md-select(flex, flex-gt-sm='45', ng-model='layout.user.sleep.hasHabit', aria-label= 'does have sleep habbit')
      md-option(ng-value= "true") I wake up at the same time each day
      md-option(ng-value= "false") I wake up at the same time at working days
      md-option(ng-value= "false") I am not bothered by time I wake up
  h3 Sleep checklist
  md-checkbox.md-primary(ng-model='layout.user.sleep.hasRegim') I wake up at the same time each day
  md-checkbox.md-primary(ng-model='layout.user.sleep.lightOff') I sleep at the totally dark room
  md-checkbox.md-primary(ng-model='layout.user.sleep.isFreshAir') I sleep in well-conditioned room
  md-checkbox.md-primary(ng-model='layout.user.sleep.hasNoNoise') I sleep silent room
  md-checkbox.md-primary(ng-model='layout.user.sleep.isBedComfortable') I sleep at comfortable bed
  kil-recommendations
