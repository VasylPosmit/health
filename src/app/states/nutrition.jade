extends default.jade
block input
  kil-section(statedata='Nutrition')
  md-divider
  h2 {{layout.selected.name}} Input Block
    md-tooltip(md-direction="top") Please, answer few questions to get recommendations right for you
  div(layout-gt-sm="row",  layout-xs="column", layout-align='space-between center', flex-gt-md="50")
    md-input-container.md-block.md-accent(flex-gt-sm='60', flex-sm='100')
      label Name
      input(ng-model='layout.user.name')
    md-radio-group(flex="35", flex-xs, layout ng-model="layout.user.gender")
      //- label Gender
      md-radio-button.md-accent(value= 'male') male
      md-radio-button.md-warn(value= 'female') female

  md-input-container.md-block.md-accent(flex-sm= '50', flex-gt-sm='15')
      label age
      input(min='18', max='99', type='number', ng-model='layout.user.age', aria-label='age', aria-controls='weight-slider')

  -var jWeight = {name : 'weight', unit1: 'kg', unit2: 'lbs', min: '40',  max: '150'}
  -var jHeight = {name : 'height', unit1: 'cm', unit2: 'ft',  min: '130', max: '220'}

  for parameter in [jWeight, jHeight]
    div(layout='row', layout-align='space-between center', flex-gt-md="30")
      md-input-container.md-block.md-accent(flex= '20', flex-gt-md='70')
        label= parameter.name
        input(min= parameter.min, max= parameter.max, type='number', ng-model='layout.user.nutrition.'+parameter.name, aria-label= parameter.name, aria-controls=parameter.name+'-slider')
      md-select.md-accent(flex="10", flex-gt-md='20', ng-model='layout.user.nutrition.'+parameter.name +'Units', aria-label= parameter.name+' units')
        md-option= parameter.unit1
        md-option= parameter.unit2
      md-slider.md-accent(flex='50', min= parameter.min, max= parameter.max, ng-model='layout.user.nutrition'+parameter.name, aria-label= parameter.name, hide-gt-md)

  p Your Body mass index is {{layout.user.BMI}}
  md-divider
