md-divider(hide show-gt-sm)
div(ng-cloak)
  md-content(layout='column')
    div(layout)
      md-button.md-raised.md-accent(flex, flex-gt-md="50", ng-click ="layout.calculate()") Calculate recommendations
    div(layout)
      md-button.md-raised(flex, flex-gt-md="50", ng-click ="layout.getBMI($event)") Am I fit?
    p(ng-bind= "layout.message")
    h2(ng-if="layout.user.name === null")
      | Health recommendations
    h2(ng-if="layout.user.name") Health recommendations for {{layout.user.name}}
    md-tabs.md-primary(md-dynamic-height, md-border-bottom, md-swipe-content)
      md-tab(ng-repeat='recommendations in layout.data.recommendations', label='{{recommendations.label}}')
        md-content.md-padding
          h2.md-headline.md-accent(ng-bind="recommendations.header")
          ul
            li(ng-repeat= "item in recommendations.list", ng-if="item.isShown" ng-bind="item.text")
