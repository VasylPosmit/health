md-divider
div(ng-cloak='')
  md-content(layout='column', flex='')
    h2 {{layout.selected.name}} recommendations for you {{layout.user.name}}
    md-tabs(md-dynamic-height='', md-border-bottom='')
      md-tab(ng-repeat='recomendation in layout.selected.recomendations', label='{{recomendation.label}}')
        md-content.md-padding
          h2.md-headline {{recomendation.header}}
          p {{recomendation.text}}
